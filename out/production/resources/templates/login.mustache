{{>layout/header}}
<div class="col-md-12">
    <h2 class="form-signin-heading">OAuth 2.0 외부 API 로그인</h2>
    <table class="table table-striped">
        <tr><td><a href="/oauth2/authorization/naver">naver</a></td></tr>
        <!--<tr><td><a href="/oauth2/authorization/google">Google</a></td></tr>-->
    </table>
    <h2>일반회원 로그인</h2>
    {{#message}}
        Invalid username and password.
    {{/message}}
    <form action="/login" method="post">
        <div class="form-group">
            <label for="title">아이디</label>
            <input type="text" class="form-control" name="username" id="id" placeholder="아이디를 입력하세요">
        </div>
        <div class="form-group">
            <label for="author"> 암호</label>
            <input type="password" class="form-control" name="password" id="pw" placeholder="암호를 입력하세요">
        </div>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="submit" class="btn btn-primary" id="btn-login">로그인</button>
    </form>
</div>
{{>layout/footer}}